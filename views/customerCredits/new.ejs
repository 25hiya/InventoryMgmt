<%- layout("./layouts/boilerplate") %> 

<style>
    h3{
        font-size: 25px;
        margin-top: 20px;
        
    }
    .container{
        text-align: center;
        display: block;
    }

    .addCredit{
        position: absolute;
        margin: 70px 500px;
        display: block;
        max-width: 800px;
        padding: 16px;
        background-color: white;
        border: 1px solid black;
    }

    select, input[type=text], input[type=number]{
        display: block;
        width: 300px;
        padding: 15px;
        margin: 5px 0 22px 0;
        border: none;
        background: #f1f1f1;
    }

    button{
        margin: 10px;
        padding: 8px;
        text-align: center;
        border-radius: 10px;
    }
</style>
<div class="container">
    <h3>New credit</h3>
    <form action="/customerCredits/" method="POST" class="addCredit">
        <label for="name">Customer name</label>
        <input type = "text" id = "name" name = "name">
        <label for="CEAssigned">CE Assigned</label>
        <input type = "text" id = "CEAssigned" name = "CEAssigned">
        <label for="totalSales">Total sales</label>
        <input type = "number" id = "totalSales" name = "totalSales">
        <label for="amtPending">Amount Pending</label>
        <input type = "number" id = "amtPending" name = "amtPending">
        <button>Save</button>
    </form>
</div>
   
   