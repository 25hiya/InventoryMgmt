<%-layout("./layouts/boilerplate") %> 
<style>
    h3{
        font-size: 25px;
        
    }
    .container{
        text-align: center;
        font-size: 15px;
        color: black;
        margin-top: 20px;
    }

    .container li{
        margin-top: 20px;
        margin-bottom: 20px;
    }
    
    button{
        margin: 10px;
        padding: 10px;
        text-align: center;
        border-radius: 10px;
    }

    a{
        color:black;
    }
    
</style>

<div class="container">
    <h3><%= foundProduct.product %></h3>
    <ul>
        <li>Price: <%= foundProduct.price %> </li>
        <li>Category: <%= foundProduct.categories %> </li>
        <li>Shelf Life: <%= foundProduct.shelfLife %> </li>
    </ul>

<button><a href = "/products/update/<%= foundProduct._id %> ">Update product</a></button>

<form action = "/products/delete/<%= foundProduct._id %>?_method=DELETE" method="POST">
    <button>Delete</button>
</form>

<button><a href= "/products/">Back to all products</a></button>

</div>

